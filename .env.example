# Prime EFR Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# Data Paths
# ============================================
INPUT_DATA_PATH=./data/input/
OUTPUT_DATA_PATH=./output/
REFERENCE_DATA_PATH=./data/reference/
SAMPLE_DATA_PATH=./data/samples/

# ============================================
# Processing Options
# ============================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Number of parallel workers for processing
MAX_WORKERS=4

# Batch size for processing large files
BATCH_SIZE=1000

# Enable multiprocessing (true/false)
USE_MULTIPROCESSING=false

# ============================================
# Excel Settings
# ============================================
# Default sheet name or index (0 for first sheet)
DEFAULT_SHEET_NAME=Sheet1

# Row where headers are located (1-based)
HEADER_ROW=5

# Row where data starts (1-based)
DATA_START_ROW=6

# ============================================
# Column Mappings
# ============================================
FACILITY_ID_COLUMN=CLIENT ID
PLAN_CODE_COLUMN=PLAN
SEQUENCE_COLUMN=SEQ. #
EMPLOYEE_NAME_COLUMN=EMPLOYEE NAME
RELATION_COLUMN=RELATION
EPO_PPO_VAL_COLUMN=EPO-PPO-VAL

# ============================================
# Output Settings
# ============================================
# Add timestamp to output files (true/false)
TIMESTAMP_FILES=true

# Output formats (comma-separated: csv,xlsx,json)
OUTPUT_FORMATS=csv,xlsx

# Create backup before modifications (true/false)
CREATE_BACKUP=true

# ============================================
# Validation Settings
# ============================================
# Skip validation checks (not recommended)
SKIP_VALIDATION=false

# Fail on missing mappings (true/false)
FAIL_ON_MISSING_MAPPINGS=false

# Maximum allowed missing mappings percentage
MAX_MISSING_MAPPINGS_PCT=5

# ============================================
# Performance Settings
# ============================================
# Memory limit in MB (0 for no limit)
MEMORY_LIMIT_MB=0

# Chunk size for reading large Excel files
EXCEL_CHUNK_SIZE=10000

# Enable progress bars (true/false)
SHOW_PROGRESS=true

# ============================================
# Developer Settings
# ============================================
# Enable debug mode (verbose output)
DEBUG_MODE=false

# Save intermediate processing steps
SAVE_INTERMEDIATE=false

# Profile performance (creates performance report)
PROFILE_PERFORMANCE=false